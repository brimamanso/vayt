
<div class="row">
  <div class="col-lg-6">
    <%= render 'shared/user_info' %>
  </div>
  <div id="newsfeed" class="col-lg-6">
    <%= render 'posts/form' %>
    <div class=" post-panel">
        <div id="activities">
          <% if @activities.empty? %>
            <div class="well">
              <%= render('shared/no_resource', resources: 'Activities') %>
            </div>
          <% else %>
            <%= render_activities(@activities, layout: '/shared/activity') %>
          <% end %>
        </div>
      <center>
        <%= will_paginate @activities, renderer: BootstrapPagination::Rails %>
      <center>           
    </div><hr>
    <div class="panel panel-default post-panel">
        <div class="panel-body row">
          <div class="col-lg-6">
            <a href="#top"><p class="opacity: .7;">Back to top <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span></p></a></center>
          </div>
        </div>
    </div> </br>
    <div class="panel panel-default post-panel">
      <div class="panel-body row">
        <center>
          <h5 style="color:purple;font-weight: bold;">Founder & CEO: Brima Manso Bangura </h5>
          <b>a Brima Manso Bangura production</b> <br>
          <h5 style="color:purple;font-weight: bold;">vAyT (c) 2018 </h5>
        </center>
      </div>
    </div>

  </div>
</div>
