    <style>
        body {
            background: linear-gradient( 
                rgba(0,0,0, 0.5),
                rgba(0,0,0, 0.5)
                ), url("/star.jpg") no-repeat center center fixed          
        }          
    </style>


  <div class="col-lg-4 col-lg-offset-4 well">
    <div class="row">
      <h3 class="text-center">Resend Unlock Instructions</h3>
    </div>
    <br>
    <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: 'form-control', autofocus: true, placeholder: 'email@example.com' %>
      </div>
        <br>
      <div class="actions">
        <%= f.submit "Resend unlock instructions", class: 'btn btn-primary' %>
      </div>
    <% end %>
    <br>
  </div>
